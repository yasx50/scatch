<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Listing - Scatch</title>
  <link href="/css/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <% if (messages.success) { %>
    <div class="alert alert-success bg-green-500">
      <%= messages.success %>
    </div>
  <% } %>
  <% if (messages.error) { %>
    <div class="alert alert-danger bg-rose-500">
      <%= messages.error %>
    </div>
  <% } %>
  

  <!-- Product Listing Section -->
  <div class="container mx-auto mt-10">
    <h2 class="text-3xl font-semibold text-gray-800 mb-8 text-center">Our Products</h2>

    <!-- Product Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      
      
     
      
     <% products.forEach(product => { %>

      <div style="background-color: <%= product.bgcolor %>" class=" shadow-lg rounded-lg overflow-hidden">
        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product 6" class="w-full h-48  object-fill">
        <div class="p-6">
          <h3 style=" background-color: <%= product.textcolor %>" class="text-xl font-semibold "><%= product.name %></h3>
          <p  class="text-gray-600 mt-2">â‚¹<%= product.price %></p>
          <a href="/shop" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">add</a>
        </div>
      </div>
      
     <% }) %>
    </div>
  </div>

</body>
</html>
