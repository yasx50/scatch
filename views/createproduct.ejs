<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scatch Admin Panel - Add Items</title>
  <link href="/css/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

  <div class="container mx-auto mt-10">
    <% if (messages.success) { %>
      <div class="alert alert-success bg-green-500">
        <%= messages.success %>
      </div>
    <% } %>
    <% if (messages.error) { %>
      <div class="alert alert-danger bg-rose-500">
        <%= messages.error %>
      </div>
    <% } %>
    
    <h1 class="text-3xl text-left text-blue-600 font-bold mb-6">Scatch Admin Panel</h1>

    <!-- Add Item Form -->
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto">
      <h2 class="text-xl font-semibold mb-4">Add a New Item</h2>
      <form action="/products/createproduct" method="POST" enctype="multipart/form-data">
        <!-- Item Name -->
        <div class="mb-4">
          <label for="name" class="block text-gray-700">Item Name</label>
          <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-md" required>
        </div>

        <!-- Original Price -->
        <div class="mb-4">
          <label for="original_price" class="block text-gray-700">Original Price</label>
          <input type="number" id="original_price" name="original_price" class="w-full px-4 py-2 border rounded-md" required>
        </div>

        <!-- Discounted Price -->
        <div class="mb-4">
          <label for="discounted_price" class="block text-gray-700">Discounted Price</label>
          <input type="number" id="discounted_price" name="discounted_price" class="w-full px-4 py-2 border rounded-md" required>
        </div>

       

        <!-- Image Upload -->
        <div class="mb-4">
          <label for="image" class="block text-gray-700">Item Image</label>
          <input type="file" id="image" name="image" class="w-full px-4 py-2 border rounded-md" accept="image/*">
        </div>

        <!-- Panel Background Color -->
        <div class="mb-4">
          <label for="panel_bg_color" class="block text-gray-700">Panel Background Color</label>
          <input type="text" id="panel_bg_color" name="panel_bg_color" class="w-full px-4 py-2 border rounded-md">
        </div>

        <!-- Text Color -->
        <div class="mb-4">
          <label for="text_color" class="block text-gray-700">Text Color</label>
          <input type="text" id="text_color" name="text_color" class="w-full px-4 py-2 border rounded-md">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Add Item</button>
      </form>
    </div>

  </div>

</body>
</html>
